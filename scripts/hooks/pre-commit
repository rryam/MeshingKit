#!/bin/bash

# Pre-commit hook to run SwiftLint on staged Swift files

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}Running SwiftLint pre-commit hook...${NC}"

# Check if SwiftLint is installed
if ! command -v swiftlint &> /dev/null; then
    echo -e "${YELLOW}Warning: SwiftLint is not installed.${NC}"
    echo "Install it with: brew install swiftlint"
    echo "Skipping SwiftLint check..."
    exit 0
fi

# Get list of staged Swift files
STAGED_SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.swift$')

# If no Swift files are staged, exit successfully
if [ -z "$STAGED_SWIFT_FILES" ]; then
    echo -e "${GREEN}No Swift files staged. Skipping SwiftLint check.${NC}"
    exit 0
fi

echo "Checking staged Swift files:"
echo "$STAGED_SWIFT_FILES" | sed 's/^/  - /'

# Run SwiftLint on staged files
if echo "$STAGED_SWIFT_FILES" | xargs swiftlint lint; then
    echo -e "${GREEN}✓ SwiftLint passed!${NC}"
    exit 0
else
    echo -e "${RED}✗ SwiftLint found issues. Please fix them before committing.${NC}"
    echo ""
    echo "You can run SwiftLint manually with:"
    echo "  swiftlint lint"
    echo ""
    echo "Or to auto-fix some issues:"
    echo "  swiftlint --fix"
    exit 1
fi

